<!DOCTYPE html>
<html lang="en">

  <%- include('../../layout/head') %>
<body>
  <%- include('../../layout/header') %>
  <main>
    <section class="main-sec">
      <% searchResults.forEach(book=> {%>
      <section class="book-sec">
      <img src="<%= book.thumbnail %>" alt="">
      <h3><%= book.title %></h3>
      <h4><%= book.author%></h4>
      <p><%= book.description%></p>
      <form action="/books" method="POST">
        <input type="hidden" value="<%= book.thumbnail %>" name="image_url">
        <input type="hidden" value="<%= book.title %>" name="title">
        <input type="hidden" value="<%= book.author%>" name="author">
        <input type="hidden" value="<%= book.description%>" name="description">
        <input type="hidden" value="<%= book.isbn%>" name="isbn">
      <input type="submit" value="Add to Collection">
    </form>
  </section>
  <% }) %>
  
    </section>
   

  </main>
  <%- include('../../layout/footer') %>

</body>

</html>